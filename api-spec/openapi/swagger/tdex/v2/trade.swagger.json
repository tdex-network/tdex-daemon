        }
      }
    },
    "tdexv2ListMarketsResponse": {
      "type": "object",
      "properties": {
        "markets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/tdexv2MarketWithFee"
          }
        }
      }
    },
    "tdexv2Market": {
      "type": "object",
      "properties": {
        "baseAsset": {
          "type": "string"
        },
        "quoteAsset": {
          "type": "string"
        }
      }
    },
    "tdexv2MarketWithFee": {
      "type": "object",
      "properties": {
        "market": {
          "$ref": "#/definitions/tdexv2Market"
